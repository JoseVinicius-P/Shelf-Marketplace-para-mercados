<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_produto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/white">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/container_img_mercado"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10dp"
        app:rippleColor="@android:color/white">

        <ImageView
            android:id="@+id/iv_logo_mercado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/estabelecimento_default"
            android:scaleType="centerCrop"
            android:contentDescription="@string/imagem_do_estabelecimento" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/nome_estab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:layout_below="@+id/container_img_mercado"
        android:textColor="@color/cinza_escuro"/>

    <TextView
        android:id="@+id/tv_funcionamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/nome_estab"
        android:layout_marginBottom="10dp"
        android:textColor="@color/cinza_escuro"/>

    <!--<ImageButton
        android:id="@+id/ib_favorito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/nome_estab"
        android:layout_alignBottom="@id/tv_funcionamento"
        android:src="@drawable/ic_estrela_borda"

        android:layout_marginEnd="10dp" />-->

</RelativeLayout>